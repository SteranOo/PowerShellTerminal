<Window x:Class="PowerShellTerminal.Client.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PowerShell Terminal" WindowStartupLocation="CenterScreen" Height="100" Width="400" ResizeMode="CanMinimize">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition  Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Address:" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"></Label>
        <TextBox Name="TbAddress" Grid.Column="1" Height="30" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
        <Button Name="BtnConnect" Content="Connect" Grid.Column="2" Width="60" Height="30" Click="BtnConnect_Click"></Button>
    </Grid>
</Window>
